<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/convention_name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter convention name"
        android:inputType="text"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/convention_address_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter convention address"
        android:inputType="textPostalAddress"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/convention_date_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter convention date (00/00/0000)"
        android:inputType="date"
        android:layout_marginLeft="30dp"/>

</LinearLayout>