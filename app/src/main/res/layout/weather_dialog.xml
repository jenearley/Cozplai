<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Name"
        android:id="@+id/weather_city_textview"
        android:textSize="30dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/weather_temp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°"
        android:layout_below="@+id/weather_city_textview"
        android:textSize="50dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/weather_min_temp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min: 0°"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/weather_temp_textview"
        android:layout_below="@+id/weather_city_textview"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/weather_max_temp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max: 0°"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/weather_temp_textview"
        android:layout_below="@+id/weather_min_temp_textview"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/weather_humidity_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity: 0%"
        android:textSize="20dp"
        android:layout_below="@+id/weather_temp_textview"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/weather_pressure_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure: 0"
        android:textSize="20dp"
        android:layout_toRightOf="@id/weather_humidity_textview"
        android:layout_below="@+id/weather_temp_textview"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>


</RelativeLayout>