<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_character_dialog_layout"
    >

    <ImageView
        android:id="@+id/character_picture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/character_source_edittext"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        android:src="@drawable/character_picture" />

    <EditText
        android:id="@+id/character_name_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter character name"
        android:layout_toRightOf="@+id/character_picture"
        android:inputType="text"/>

    <EditText
        android:id="@+id/character_source_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter character source"
        android:layout_toRightOf="@+id/character_picture"
        android:layout_below="@+id/character_name_edittext"
        android:inputType="text"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*source = show, comic, etc."
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/character_picture"
        android:layout_below="@+id/character_source_edittext"/>

</RelativeLayout>